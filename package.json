{
  "name": "satbank-monorepo",
  "version": "0.1.0",
  "description": "SAT Mock Exam & Problem Bank Platform",
  "private": true,
  "packageManager": "pnpm@8.15.0",
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm -r dev",
    "lint": "pnpm -r lint",
    "type-check": "pnpm -r type-check",
    "clean": "pnpm -r clean",
    "test": "pnpm -r test",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "backup": "node scripts/backup-database.js",
    "backup:sql": "bash scripts/backup-sql.sh",
    "test:scoring": "cd apps/web && pnpm test -- tests/scoring",
    "test:scoring:full": "cd apps/web && pnpm test:scoring:comprehensive",
    "test:scoring:integration": "cd apps/web && pnpm test -- tests/scoring/exam-scoring.integration.test.ts",
    "test:scoring:validation": "cd apps/web && pnpm test -- tests/integration/exam-scoring-validation.test.ts",
    "test:scoring:quick": "pnpm test:scoring:validation",
    "test:scoring:edge-cases": "cd apps/web && pnpm test -- tests/utils/test-data-generator.test.ts",
    "validate:all-exams": "pnpm test:scoring:full",
    "scoring:health-check": "pnpm test:scoring:quick",
    "scoring:regression": "pnpm test:scoring:integration",
    "scoring:stress-test": "cd apps/web && pnpm test -- tests/scoring --verbose --reporter=verbose"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.2.5",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=6.0.0"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@supabase/supabase-js": "^2.52.1",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.1",
    "glob": "^11.0.3",
    "lucide-react": "^0.316.0",
    "marked": "^4.3.0",
    "next": "^14.2.30"
  }
}
